    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "build",
        "resolveJsonModule": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ESNext",
            "dom"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}